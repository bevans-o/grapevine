// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  tags      Tag[]
  weight    Int  
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Vine {
    name String
    owner User
    grapes? Grape[]
}

model Grape {
    name String
    description String
    status Status
    yesVotes User[]
    noVotes User[]
    unvoted User[]
    options Options[]
    passThreshold Int
    tags Tag[]
    childGrapes? Grape[]
}

enum Status {
    UPCOMING
    OPEN
    PASS
    FAIL
}

model Tag {
    name String
}


